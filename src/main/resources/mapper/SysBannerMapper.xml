<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xin.admin.mapper.contentManagement.SysBannerMapper">

    <select id="selectPaging" resultType="xin.admin.domain.contentManagement.SysBanner" parameterType="map">
        SELECT * FROM sys_banner
        WHERE 1=1
        <if test="sysBanner != null">
            <if test="sysBanner.id != null">
                AND id=#{sysBanner.id}
            </if>
            <if test="sysBanner.name != null and sysBanner.name !=''">
                AND name LIKE CONCAT('%', #{sysBanner.name}, '%')
            </if>
            <if test="sysBanner.status != null">
                AND status=#{sysBanner.status}
            </if>
        </if>
        LIMIT #{quantity} OFFSET #{offset}
    </select>

    <select id="selectPagingCount" resultType="java.lang.Integer" parameterType="map">
        SELECT COUNT(*) FROM sys_banner
        WHERE 1=1
        <if test="sysBanner != null">
            <if test="sysBanner.id != null">
                AND id=#{sysBanner.id}
            </if>
            <if test="sysBanner.name != null and sysBanner.name !=''">
                AND name LIKE CONCAT('%', #{sysBanner.name}, '%')
            </if>
            <if test="sysBanner.status != null">
                AND status=#{sysBanner.status}
            </if>
        </if>
    </select>

</mapper>